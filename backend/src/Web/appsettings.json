{
  "Serilog": {
    "Using": [ "Serilog" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "protocol://domain:port"
        }
      }
    ],
    "Enrich": [
      "WithThreadId",
      "WithEnvironmentName",
      "WithMachineName",
      "WithEnvironmentUserName"
    ]
  },
  "ConnectionStrings": {
    "Database": "Server=server;Port=port;Database=database;User Id=user_id;Password=password;",
    "Redis": "localhost:6379"
  },
  "SoftDeleteSettings": {
    "RetentionDate": 30
  },

  "Minio": {
    "Endpoint": "localhost:9000",
    "AccessKey": "AccessKey",
    "SecretKey": "SecretKey",
    "WithSSL": false
  },
  "Jwt": {
    "Issuer": "https://petfamily/api",
    "Audience": "https://petfamily.ru",
    "Key": "key",
    "ExpiredMinutesTime":  15
  },
  "RefreshSession": {
    "ExpiredDaysTime": 30
  },

  "AllowedHosts": "*"
}